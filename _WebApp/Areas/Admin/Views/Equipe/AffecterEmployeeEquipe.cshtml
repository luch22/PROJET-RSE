@model IEnumerable<Client.Models.Employee>

@{
    ViewBag.Title = "AffecterEmployeeEquipe";
}

<h2>Affecter un/des employé(s) à l'équipe!</h2>

<div>
    @if (Model != null && Model.Any()) {
        <form action="~/Admin/Equipe/AffecterEmployeeEquipe" method="post">
            <div class="list-group">
                <table class="table table-striped table-hover ">
                    <tr class="info">
                        <th>
                            @Html.DisplayNameFor(model => model.First().Nom)
                        </th>
                        <th>
                            Affecter
                        </th>
                    </tr>
                    @if (Model != null && Model.Any()) {
                        foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nom) @Html.DisplayFor(modelItem => item.Prenom)
                                </td>
                                <td>
                                    <input type="checkbox" name='@item.Id' value="0" id='@item.Id' />
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
            <input type="hidden" name="idEq" value='@ViewBag.IdEq' />
            <input class="btn btn-info" type="submit" value="Affecter" />
        </form>
    }
    else {
        <span>Il n'y a pas d'employés sans équipe!</span>
    }
</div>
<br />
<a class="btn btn-danger" href="javascript:void(0);" onclick="history.go(-1);">Retour</a>