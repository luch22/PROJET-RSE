@model IEnumerable<Client.Models.Employee>

@{
    ViewBag.Title = "AffecterEmployeeDep";
}

<h2>AffecterEmployeeDep</h2>

<div>
    @if (Model != null && Model.Any()) {
        <form action="~/Admin/Admin/AffecterEmployeeDep" method="post">
            <div class="list-group">
                <h4>Employés du département</h4>
                <table class="table table-striped table-hover ">
                    <tr class="list-group info">
                        <th>
                            @Html.DisplayNameFor(model => model.First().Nom)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Birthday)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Email)
                        </th>
                        <th>
                            Affecter
                        </th>
                    </tr>
                    @if (Model != null && Model.Any()) {
                        foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.ActionLink(Html.DisplayFor(modelItem => item.Nom).ToString() + " " + Html.DisplayFor(modelItem => item.Prenom).ToString(), "DetailsEmployee", "Employee", new { id = item.Id }, null)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Birthday)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    <input type="checkbox" name='@item.Id' value="0" id='@item.Id' />
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
            <input type="hidden" name="idDep" value='@ViewBag.IdDep' />
            <input class="btn btn-info" type="submit" value="Affecter" />
        </form>
    }
    else {
        <span>Il n'y a pas d'autre employé(s)!</span>
    }
</div>
<br />
<a class="btn btn-danger" href="javascript:void(0);" onclick="history.go(-1);">Retour</a>
