@model IEnumerable<Client.Models.Departement>

@{
    ViewBag.Title = "Index";
}

<h2>Département(s)</h2>

<p>
    @Html.ActionLink("Créer département", "CreateDep", null, new { @class = "btn btn-info" })
</p>
<table class="table hovercolorblue">
    <tr class="info">
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Admin)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr onclick="location.href='@Url.Action("DetailsDep", new { id = item.Id })'">
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Admin)
        </td>
        <td>
            @Html.ActionLink("Modifier", "EditDep", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" }) | 
            @Html.ActionLink("Delete", "DeleteDep", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>

<a class="btn btn-danger" href="javascript:void(0);" onclick="history.go(-1);">Retour</a>
